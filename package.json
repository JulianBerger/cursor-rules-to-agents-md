{
  "name": "cursor-rules-to-agents-md",
  "version": "1.0.2",
  "description": "Convert .cursor/rules into a standardized AGENTS.md file.",
  "type": "module",
  "author": "Julian Berger",
  "license": "MIT",
  "bin": {
    "cursor-rules-to-agents-md": "dist/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/julianberger/cursor-rules-to-agents-md#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julianberger/cursor-rules-to-agents-md.git"
  },
  "bugs": {
    "url": "https://github.com/julianberger/cursor-rules-to-agents-md/issues"
  },
  "keywords": [
    "cursor",
    "cursor-rules",
    "agents",
    "agents.md",
    "agents-md",
    "developer-tools",
    "cli",
    "bun",
    "rules",
    "automation",
    "markdown"
  ],
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --format esm --minify",
    "test": "bun test",
    "lint": "bunx biome lint .",
    "format": "bunx biome format . --write",
    "typecheck": "bunx tsc --noEmit -p tsconfig.json && bunx tsc --noEmit -p tsconfig.tests.json",
    "check": "bun run lint && bun run typecheck && bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.19.30",
    "bun-types": "^1.3.6",
    "typescript": "^5.9.3"
  }
}
